  <script>
    AOS.init({ duration: 900, once: true });

    // Carrusel para sección Quiénes Somos
    (function() {
      const imgs = document.querySelectorAll('#carousel-quienes .carousel-img');
      let idx = 0;
      let interval = null;
      function showImg(i) {
        imgs.forEach((img, j) => {
          img.classList.toggle('active', i === j);
        });
      }
      function nextImg() {
        idx = (idx + 1) % imgs.length;
        showImg(idx);
      }
      function startInterval() {
        interval = setInterval(nextImg, 4000);
      }
      showImg(idx);
      startInterval();
    })();

    // Menú móvil hamburguesa
    const menuBtn = document.getElementById('menu-btn');
    const navMenu = document.getElementById('nav-menu');
    const navBackdrop = document.getElementById('nav-backdrop');
    menuBtn.addEventListener('click', () => {
      navMenu.classList.toggle('translate-x-full');
      navBackdrop.classList.toggle('hidden');
    });
    navBackdrop.addEventListener('click', () => {
      navMenu.classList.add('translate-x-full');
      navBackdrop.classList.add('hidden');
    });
    // Cierra el menú al hacer clic en un enlace
    navMenu.querySelectorAll('a').forEach(link => {
      link.addEventListener('click', () => {
        navMenu.classList.add('translate-x-full');
        navBackdrop.classList.add('hidden');
      });
    });
  </script>
